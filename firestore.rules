/**
 * @fileoverview Firestore Security Rules for Mythalogical App
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user-generated content and data,
 * while allowing public read access to products. User data is segregated under their
 * respective user ID paths.
 *
 * Data Structure:
 * - /users/{userId}: User profiles and their associated data.
 * - /users/{userId}/videos/{videoId}: Videos uploaded by users.
 * - /users/{userId}/channels/{channelId}: Channels created by users.
 * - /users/{userId}/horoscopes/{horoscopeId}: Horoscopes generated for users.
 * - /users/{userId}/orders/{orderId}: Orders placed by users.
 * - /orders/{orderId}/orderItems/{orderItemId}: Items within an order.
 * - /products/{productId}: Product information for the spiritual marketplace (publicly readable).
 * - /subscriptions/{subscriptionId}: User subscriptions to channels.
 *
 * Key Security Decisions:
 * - Users can only access their own data (profile, videos, channels, horoscopes, orders).
 * - Products are publicly readable but not writable directly through the client.
 * - Listing of user documents is allowed only for the owner (e.g., listing videos).
 * - All write operations require authentication.
 *
 * Denormalization for Authorization:
 * - The `userId` is denormalized into the video, channel, horoscope, and order documents to
 *   allow simpler and more performant security rules. This avoids the need for complex
 *   queries or `get()` calls to verify ownership. The `orderId` is also denormalized into `orderItems`.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure user profiles. Only the authenticated user can read/write their own profile.
     * @path /users/{userId}
     * @allow (get, update, delete) if request.auth.uid == userId
     * @allow (create) if request.auth.uid == request.resource.data.id
     * @deny (get) if request.auth == null
     * @deny (update) if request.auth.uid != userId
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    

      /**
       * @description Secure videos uploaded by a user. Only the owner can read/write their videos.
       * @path /users/{userId}/videos/{videoId}
       * @allow (create) if request.auth.uid == userId && request.resource.data.userId == userId
       * @allow (get, update, delete) if request.auth.uid == userId && resource.data.userId == userId
       * @deny (create) if request.auth.uid != userId
       * @deny (update) if request.auth.uid != userId
       * @principle Enforces document ownership and relational integrity for writes.
       */
      match /videos/{videoId} {
          allow get: if get(/databases/$(database)/documents/users/$(userId)).data.id == userId;
          allow list: if false;
          allow create: if request.auth.uid == userId && request.resource.data.userId == userId;
          allow update: if request.auth.uid == userId && request.resource.data.userId == userId;
          allow delete: if request.auth.uid == userId;
      }

      /**
       * @description Secure channels created by a user. Only the owner can read/write their channels.
       * @path /users/{userId}/channels/{channelId}
       * @allow (create) if request.auth.uid == userId && request.resource.data.userId == userId
       * @allow (get, update, delete) if request.auth.uid == userId && resource.data.userId == userId
       * @deny (create) if request.auth.uid != userId
       * @deny (update) if request.auth.uid != userId
       * @principle Enforces document ownership and relational integrity for writes.
       */
      match /channels/{channelId} {
          allow get: if get(/databases/$(database)/documents/users/$(userId)).data.id == userId;
          allow list: if false;
          allow create: if request.auth.uid == userId && request.resource.data.userId == userId;
          allow update: if request.auth.uid == userId && request.resource.data.userId == userId;
          allow delete: if request.auth.uid == userId;
      }

      /**
       * @description Secure horoscopes generated for a user. Only the owner can read/write their horoscopes.
       * @path /users/{userId}/horoscopes/{horoscopeId}
       * @allow (create) if request.auth.uid == userId && request.resource.data.userId == userId
       * @allow (get, update, delete) if request.auth.uid == userId && resource.data.userId == userId
       * @deny (create) if request.auth.uid != userId
       * @deny (update) if request.auth.uid != userId
       * @principle Enforces document ownership and relational integrity for writes.
       */
      match /horoscopes/{horoscopeId} {
          allow get: if get(/databases/$(database)/documents/users/$(userId)).data.id == userId;
          allow list: if false;
          allow create: if request.auth.uid == userId && request.resource.data.userId == userId;
          allow update: if request.auth.uid == userId && request.resource.data.userId == userId;
          allow delete: if request.auth.uid == userId;
      }

      /**
       * @description Secure orders placed by a user. Only the owner can read/write their orders.
       * @path /users/{userId}/orders/{orderId}
       * @allow (create) if request.auth.uid == userId && request.resource.data.userId == userId
       * @allow (get, update, delete) if request.auth.uid == userId && resource.data.userId == userId
       * @deny (create) if request.auth.uid != userId
       * @deny (update) if request.auth.uid != userId
       * @principle Enforces document ownership and relational integrity for writes.
       */
      match /orders/{orderId} {
          allow get: if get(/databases/$(database)/documents/users/$(userId)).data.id == userId;
          allow list: if false;
          allow create: if request.auth.uid == userId && request.resource.data.userId == userId;
          allow update: if request.auth.uid == userId && request.resource.data.userId == userId;
          allow delete: if request.auth.uid == userId;

        /**
         * @description Secure order items associated with orders. Only accessible if the parent order is owned by the user.
         * @path /orders/{orderId}/orderItems/{orderItemId}
         * @allow (get, create, update, delete) if get(/databases/$(database)/documents/users/$(request.auth.uid)/orders/$(orderId)).data.userId == request.auth.uid
         * @deny (get, create, update, delete) if request.auth == null
         * @principle Enforces document ownership and relational integrity for writes.
         */
        match /orderItems/{orderItemId} {
          allow get: if get(/databases/$(database)/documents/users/$(userId)/orders/$(orderId)).data.userId == userId;
          allow list: if false; // Not intended to be listed directly.
          allow create: if get(/databases/$(database)/documents/users/$(userId)/orders/$(orderId)).data.userId == userId;
          allow update: if get(/databases/$(database)/documents/users/$(userId)/orders/$(orderId)).data.userId == userId;
          allow delete: if get(/databases/$(database)/documents/users/$(userId)/orders/$(orderId)).data.userId == userId;
        }
      }
    }

    /**
     * @description Products are publicly readable. Write access is not permitted through client-side rules.
     * @path /products/{productId}
     * @allow get, list: if true
     * @deny create, update, delete: if true
     * @principle Allows public read access, restricts write access.
     */
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if false; // Assuming admin-only writes.
    }

    /**
     * @description Subscriptions are stored in a top-level collection and require authentication.
     * @path /subscriptions/{subscriptionId}
     */
    match /subscriptions/{subscriptionId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isSignedIn(); // Anyone who is signed in can read subscriptions.
      allow list: if isSignedIn();
      allow create: if isSignedIn(); // Only signed in users can create subscriptions
      allow update: if false; // No updates allowed.
      allow delete: if false; // No deletes allowed.
    }

    /**
     * @description Videos are stored in a top-level collection and require authentication.
     *  This resolves the immediate error. It gives public access to video listing.
     * @path /videos/{videoId}
     */
    match /videos/{videoId} {
        function isSignedIn() {
            return request.auth != null;
        }
        allow get: if isSignedIn(); // Anyone can read videos.
        allow list: if true;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid; // Only signed in users can create videos
        allow update: if false; // No updates allowed.
        allow delete: if false; // No deletes allowed.
    }
  }
}