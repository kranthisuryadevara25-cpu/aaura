rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =========================
    // Helper functions
    // =========================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    // =========================
    // Default deny
    // =========================
    match /{document=**} {
      allow get, list: if false;
      allow create, update, delete: if false;
    }

    // =========================
    // Users
    // =========================
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update, delete: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      
      // Subcollections inherit owner access
      match /{subCollection}/{docId} {
        allow get, list: if isOwner(userId);
        allow create, update, delete: if isExistingOwner(userId);
      }
    }

    // =========================
    // Media
    // =========================
    match /media/{mediaId} {
      allow get, list: if resource.data.isPublic == true;
      allow get, list: if isOwner(resource.data.userId); // Owner can always read
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isExistingOwner(resource.data.userId);

      match /comments/{commentId} {
        allow get, list: if true;
        allow create: if isSignedIn();
        allow update, delete: if isExistingOwner(resource.data.authorId);
      }

      match /likes/{userId} {
        allow get, list: if true;
        allow create: if isSignedIn() && request.auth.uid == userId;
        allow update, delete: if isExistingOwner(userId);
      }
    }

    // =========================
    // Playlists
    // =========================
    match /playlists/{playlistId} {
      allow get, list: if resource.data.isPublic == true;   // public playlists
      allow get, list: if isOwner(resource.data.creatorId); // owner can always read
      allow create: if isSignedIn() && request.resource.data.creatorId == request.auth.uid;
      allow update, delete: if isExistingOwner(resource.data.creatorId);
    }

    // =========================
    // Channels
    // =========================
    match /channels/{channelId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isExistingOwner(resource.data.userId);
    }

    // =========================
    // Temples
    // =========================
    match /temples/{templeId} {
      allow get, list: if true;
      allow create, update, delete: if false;

      match /reviews/{reviewId} {
        allow get, list: if true;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isExistingOwner(resource.data.userId);
      }

      match /posts/{postId} {
        allow get, list: if true;
        allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
        allow update, delete: if isExistingOwner(resource.data.authorId);

        match /comments/{commentId} {
          allow get, list: if true;
          allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
          allow update, delete: if isExistingOwner(resource.data.authorId);
        }

        match /likes/{userId} {
          allow get, list: if true;
          allow create: if isSignedIn() && request.auth.uid == userId;
          allow update, delete: if isExistingOwner(userId);
        }
      }
    }

    // =========================
    // Stories / Epic Heroes / Rituals / Panchang / Festivals
    // =========================
    match /stories/{storyId} { allow get, list: if true; allow create, update, delete: if false; }
    match /epicHeroes/{heroId} { allow get, list: if true; allow create, update, delete: if false; }
    match /rituals/{ritualId} { allow get, list: if true; allow create, update, delete: if false; }
    match /panchang/{date} { allow get, list: if true; allow create, update, delete: if false; }
    match /festivals/{festivalId} { allow get, list: if true; allow create, update, delete: if false; }

    // =========================
    // Groups
    // =========================
    match /groups/{groupId} {
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update, delete: if false;

      match /members/{userId} {
        allow get, list: if true;
        allow create: if isSignedIn() && request.auth.uid == userId;
        allow update, delete: if isExistingOwner(userId);
      }
    }

    // =========================
    // Posts
    // =========================
    match /posts/{postId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isExistingOwner(resource.data.authorId);

      match /comments/{commentId} {
        allow get, list: if true;
        allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
        allow update, delete: if isExistingOwner(resource.data.authorId);
      }

      match /likes/{userId} {
        allow get, list: if true;
        allow create: if isSignedIn() && request.auth.uid == userId;
        allow update, delete: if isExistingOwner(userId);
      }
    }

    // =========================
    // Manifestations
    // =========================
    match /manifestations/{manifestationId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isExistingOwner(resource.data.userId);

      match /comments/{commentId} {
        allow get, list: if true;
        allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
        allow update, delete: if isExistingOwner(resource.data.authorId);
      }

      match /likes/{userId} {
        allow get, list: if true;
        allow create: if isSignedIn() && request.auth.uid == userId;
        allow update, delete: if isExistingOwner(userId);
      }
    }
  }
}
