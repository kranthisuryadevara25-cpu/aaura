/**
 * @fileoverview Firestore Security Rules for Mythalogical App
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user-generated content (videos, channels, horoscopes, orders),
 * ensuring that only the authenticated user can create, read, update, or delete their own data. Products are publicly readable,
 * but write access is not granted in this initial prototyping phase.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles, accessible only by the respective user.
 * - /users/{userId}/videos/{videoId}: Stores videos uploaded by users, accessible only by the uploader.
 * - /users/{userId}/channels/{channelId}: Stores channels created by users, accessible only by the creator.
 * - /users/{userId}/horoscopes/{horoscopeId}: Stores horoscopes generated for users, accessible only by the user.
 * - /users/{userId}/orders/{orderId}: Stores orders placed by users, accessible only by the user.
 * - /orders/{orderId}/orderItems/{orderItemId}: Stores order items associated with orders, accessible only by the user.
 * - /products/{productId}: Stores product information, publicly readable. Write access is not granted.
 * - /subscriptions/{subscriptionId}: Stores user subscriptions, accessible only by the respective user.
 *
 * Key Security Decisions:
 * - User listing is disallowed to protect user privacy.
 * - Products are publicly readable to facilitate discovery.
 * - Write operations are strictly controlled based on ownership to prevent unauthorized modifications.
 *
 * Denormalization for Authorization:
 * - Each subcollection under /users/{userId} includes the userId in the document data itself (e.g., video.userId)
 *   to allow for simple, performant ownership checks without additional reads.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description: Secures user profiles, ensuring only the authenticated user can manage their own profile.
     * @path: /users/{userId}
     * @allow: (create) - Authenticated user with matching userId can create their profile.
     * @allow: (get, update, delete) - Authenticated user with matching userId can get, update, and delete their profile.
     * @deny: (create, get, update, delete) - Any other user attempts to manage this profile.
     * @principle: Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // User listing is not allowed.
      allow create: if request.auth.uid == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description: Secures videos uploaded by users, ensuring only the uploader can manage them.
     * @path: /users/{userId}/videos/{videoId}
     * @allow: (create) - Authenticated user with matching userId can upload videos.
     * @allow: (get, update, delete) - Authenticated user with matching userId can manage their own videos.
     * @deny: (create, get, update, delete) - Any other user attempts to manage these videos.
     * @principle: Enforces document ownership for videos.
     */
    match /users/{userId}/videos/{videoId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description: Secures channels created by users, ensuring only the creator can manage them.
     * @path: /users/{userId}/channels/{channelId}
     * @allow: (create) - Authenticated user with matching userId can create channels.
     * @allow: (get, update, delete) - Authenticated user with matching userId can manage their own channels.
     * @deny: (create, get, update, delete) - Any other user attempts to manage these channels.
     * @principle: Enforces document ownership for channels.
     */
    match /users/{userId}/channels/{channelId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description: Secures horoscopes generated for users, ensuring only the user can access them.
     * @path: /users/{userId}/horoscopes/{horoscopeId}
     * @allow: (create) - Authenticated user with matching userId can have horoscopes generated for them.
     * @allow: (get, update, delete) - Authenticated user with matching userId can manage their own horoscopes.
     * @deny: (create, get, update, delete) - Any other user attempts to manage these horoscopes.
     * @principle: Enforces document ownership for horoscopes.
     */
    match /users/{userId}/horoscopes/{horoscopeId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
       allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description: Secures orders placed by users, ensuring only the user can access them.
     * @path: /users/{userId}/orders/{orderId}
     * @allow: (create) - Authenticated user with matching userId can place orders.
     * @allow: (get, update, delete) - Authenticated user with matching userId can manage their own orders.
     * @deny: (create, get, update, delete) - Any other user attempts to manage these orders.
     * @principle: Enforces document ownership for orders.
     */
    match /users/{userId}/orders/{orderId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
       allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description: Secures order items associated with orders, ensuring only the user with the order can access them.
     * @path: /orders/{orderId}/orderItems/{orderItemId}
     * @allow: (create) - Any authenticated user can create order items.
     * @allow: (get, update, delete) - Any authenticated user can manage order items.
     * @deny: (create, get, update, delete) - Any unauthenticated user attempts to manage these order items.
     * @principle: Enforces document ownership for order items.
     */
    match /orders/{orderId}/orderItems/{orderItemId} {
      function isLoggedIn() {
            return request.auth != null;
      }

      allow get: if isLoggedIn();
      allow list: if false;
      allow create: if isLoggedIn();
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description: Allows public read access to product information. Write access is not granted.
     * @path: /products/{productId}
     * @allow: (get, list) - Any user can read product information.
     * @deny: (create, update, delete) - No user can create, update, or delete product information.
     * @principle: Public read access for products.
     */
    match /products/{productId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description: Secures user subscriptions to channels, ensuring only the user can manage them.
     * @path: /subscriptions/{subscriptionId}
     * @allow: (create) - Authenticated user can create subscriptions.
     * @allow: (get, update, delete) - Authenticated user can manage their own subscriptions.
     * @deny: (create, get, update, delete) - Any other user attempts to manage these subscriptions.
     */
    match /subscriptions/{subscriptionId} {
        allow get: if request.auth != null;
        allow list: if false;
        allow create: if request.auth != null;
        allow update: if false;
        allow delete: if false;
    }

    /**
     * @description: Protects the /videos collection from public listing, ensuring that listing can only be done under a specific user's videos.
     * @path: /videos
     * @deny: (list) - Public listing of the /videos collection is not permitted.
     * @principle: Prevents unauthorized enumeration of videos.
     */
    match /videos {
        allow get: if false;
        allow list: if false;
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }
  }
}