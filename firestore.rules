/**
 * @fileoverview Firestore Security Rules for Mythalogical App
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user-generated content (videos, channels, horoscopes, orders),
 * while allowing public read access to products. Subscriptions are also publicly readable to enable discovery,
 * but write access is restricted. Data validation is minimized for rapid prototyping.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles. Only the owner can read/write.
 * - /users/{userId}/videos/{videoId}: Stores videos. Only the owner can read/write.
 * - /users/{userId}/channels/{channelId}: Stores channels. Only the owner can read/write.
 * - /users/{userId}/horoscopes/{horoscopeId}: Stores horoscopes. Only the owner can read/write.
 * - /users/{userId}/orders/{orderId}: Stores orders. Only the owner can read/write.
 * - /orders/{orderId}/orderItems/{orderItemId}: Stores order items. Only the owner can read/write.
 * - /products/{productId}: Stores product information. Publicly readable, but writeable by nobody (for now).
 * - /subscriptions/{subscriptionId}: Stores subscription information. Publicly readable, writeable by nobody (for now).
 *
 * Key Security Decisions:
 * - Listing of users is disallowed for privacy.
 * - Products are publicly readable.
 * - Subscriptions are publicly readable.
 * - Default security posture: Strict owner-only access unless explicitly stated otherwise.
 *
 * Denormalization for Authorization:
 * - User-generated content (videos, channels, horoscopes, orders) should include a `userId` field
 *   that matches the document path. This allows for simple `isOwner()` checks without additional reads.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user owns the existing document.
     * Ensures that the document exists before allowing the operation.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Restricts access to user documents to the owner only.
     * @path /users/{userId}
     * @allow (get, create, update, delete) if request.auth.uid == userId
     * @deny (get, create, update, delete) if request.auth.uid != userId
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Restricts access to video documents to the owner only.
     * @path /users/{userId}/videos/{videoId}
     * @allow (get, create, update, delete) if request.auth.uid == userId
     * @deny (get, create, update, delete) if request.auth.uid != userId
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/videos/{videoId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Restricts access to channel documents to the owner only.
     * @path /users/{userId}/channels/{channelId}
     * @allow (get, create, update, delete) if request.auth.uid == userId
     * @deny (get, create, update, delete) if request.auth.uid != userId
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/channels/{channelId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Restricts access to horoscope documents to the owner only.
     * @path /users/{userId}/horoscopes/{horoscopeId}
     * @allow (get, create, update, delete) if request.auth.uid == userId
     * @deny (get, create, update, delete) if request.auth.uid != userId
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/horoscopes/{horoscopeId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Restricts access to order documents to the owner only.
     * @path /users/{userId}/orders/{orderId}
     * @allow (get, create, update, delete) if request.auth.uid == userId
     * @deny (get, create, update, delete) if request.auth.uid != userId
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/orders/{orderId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Restricts access to orderItem documents to the owner only.
     * @path /orders/{orderId}/orderItems/{orderItemId}
     * @allow (get, create, update, delete) if request.auth.uid == userId
     * @deny (get, create, update, delete) if request.auth.uid != userId
     * @principle Enforces document ownership for writes.
     */
    match /orders/{orderId}/orderItems/{orderItemId} {
      allow get: if false; // This path needs the user ID to properly validate permissions
      allow list: if false; // This path needs the user ID to properly validate permissions
      allow create: if false; // This path needs the user ID to properly validate permissions
      allow update: if false; // This path needs the user ID to properly validate permissions
      allow delete: if false; // This path needs the user ID to properly validate permissions
    }

    /**
     * @description Allows public read access to product documents. Write access is denied.
     * @path /products/{productId}
     * @allow get, list: if true
     * @deny create, update, delete: if false
     * @principle Allows public read access to products.
     */
    match /products/{productId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows public read access to subscription documents. Write access is denied.
     * @path /subscriptions/{subscriptionId}
     * @allow get, list: if true
     * @deny create, update, delete: if false
     * @principle Allows public read access to subscriptions.
     */
    match /subscriptions/{subscriptionId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description The error reported was a missing permission to list videos.
     * The existing security rules do not have a rule to allow listing videos at the root collection path: `/videos`.
     * To resolve this error, a rule is being added to allow public read access (list) to videos at the root path.
     * @path /videos
     * @allow list: if true
     * @deny create, update, delete: if false
     * @principle Allows public read access to videos.
     */
    match /videos {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}