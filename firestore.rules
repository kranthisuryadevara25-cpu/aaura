/**
 * @fileoverview Firestore Security Rules for Mythalogical App
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user-generated content
 * (videos, channels, horoscopes, orders) and provides public read access to products.
 * Subscriptions are stored in a top-level collection and are secured by validating the
 * existence of the user and channel being subscribed to.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles, accessible only by the user themselves.
 * - /users/{userId}/videos/{videoId}: Stores videos uploaded by users, accessible only by the user.
 * - /users/{userId}/channels/{channelId}: Stores channels created by users, accessible only by the user.
 * - /users/{userId}/horoscopes/{horoscopeId}: Stores horoscopes generated for users, accessible only by the user.
 * - /users/{userId}/orders/{orderId}: Stores orders placed by users, accessible only by the user.
 * - /orders/{orderId}/orderItems/{orderItemId}: Stores order items associated with orders, accessible only by users with access to the parent order.
 * - /products/{productId}: Stores product information, publicly readable.
 * - /subscriptions/{subscriptionId}: Stores user subscriptions to channels.
 *
 * Key Security Decisions:
 * - User listing is disallowed.
 * - Products are publicly readable, but write access is not defined.
 * - Strict ownership checks are enforced for all user-owned data.
 * - Denormalization of `userId` within subcollections simplifies authorization checks.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     * @return {boolean} True if the request is authenticated, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the requesting user is the owner of the resource.
     * @param {string} userId The user ID to check against.
     * @return {boolean} True if the requesting user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the requesting user is the owner of the resource and the resource exists.
     * @param {string} userId The user ID to check against.
     * @return {boolean} True if the requesting user is the owner and the resource exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Rules for the /users/{userId} collection.
     * @path /users/{userId}
     * @allow (create) - Authenticated user with matching userId can create their profile.
     * @allow (get, update, delete) - Authenticated user can get, update, or delete their own profile.
     * @deny (list) - Listing users is not allowed.
     * @deny (create) - Unauthenticated user cannot create a profile.
     * @deny (update) - Authenticated user cannot update another user's profile.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/videos/{videoId} collection.
     * @path /users/{userId}/videos/{videoId}
     * @allow (create) - Authenticated user can create a video under their userId if request.resource.data.userId == userId.
     * @allow (get, update, delete) - Authenticated user can get, update, or delete their own video.
     * @deny (list) - Listing videos is not allowed (must query).
     * @deny (create) - Authenticated user cannot create a video under another user's userId.
     * @deny (update) - Authenticated user cannot update another user's video.
     * @principle Enforces document ownership for writes, validates relational integrity on create.
     */
    match /users/{userId}/videos/{videoId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/channels/{channelId} collection.
     * @path /users/{userId}/channels/{channelId}
     * @allow (create) - Authenticated user can create a channel under their userId if request.resource.data.userId == userId.
     * @allow (get, update, delete) - Authenticated user can get, update, or delete their own channel.
     * @deny (list) - Listing channels is not allowed.
     * @deny (create) - Authenticated user cannot create a channel under another user's userId.
     * @deny (update) - Authenticated user cannot update another user's channel.
     * @principle Enforces document ownership for writes, validates relational integrity on create.
     */
    match /users/{userId}/channels/{channelId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/horoscopes/{horoscopeId} collection.
     * @path /users/{userId}/horoscopes/{horoscopeId}
     * @allow (create) - Authenticated user can create a horoscope under their userId if request.resource.data.userId == userId.
     * @allow (get, update, delete) - Authenticated user can get, update, or delete their own horoscope.
     * @deny (list) - Listing horoscopes is not allowed.
     * @deny (create) - Authenticated user cannot create a horoscope under another user's userId.
     * @deny (update) - Authenticated user cannot update another user's horoscope.
     * @principle Enforces document ownership for writes, validates relational integrity on create.
     */
    match /users/{userId}/horoscopes/{horoscopeId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/orders/{orderId} collection.
     * @path /users/{userId}/orders/{orderId}
     * @allow (create) - Authenticated user can create an order under their userId if request.resource.data.userId == userId.
     * @allow (get, update, delete) - Authenticated user can get, update, or delete their own order.
     * @deny (list) - Listing orders is not allowed.
     * @deny (create) - Authenticated user cannot create an order under another user's userId.
     * @deny (update) - Authenticated user cannot update another user's order.
     * @principle Enforces document ownership for writes, validates relational integrity on create.
     */
    match /users/{userId}/orders/{orderId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /orders/{orderId}/orderItems/{orderItemId} collection.
     * @path /orders/{orderId}/orderItems/{orderItemId}
     * @allow (get, list) - Anyone with access to the parent order can read its order items.
     * @allow (create, update, delete) - Only the owner of the order can create, update, or delete order items.
     * @principle Inherits authorization from parent order.
     */
    match /orders/{orderId}/orderItems/{orderItemId} {
        allow get: if get(/databases/$(database)/documents/users/$(request.auth.uid)/orders/$(orderId)).data.userId == request.auth.uid;
        allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)/orders/$(orderId)).data.userId == request.auth.uid;
        allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)/orders/$(orderId)).data.userId == request.auth.uid;
        allow update: if false; // TODO: Implement owner validation once the schema is updated with an ownership field.
        allow delete: if false; // TODO: Implement owner validation once the schema is updated with an ownership field.
    }

    /**
     * @description Rules for the /products/{productId} collection.
     * @path /products/{productId}
     * @allow (get, list) - Products are publicly readable.
     * @deny (create, update, delete) -  Writes are not allowed
     * @principle Products are publicly readable.
     */
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
    }

    /**
     * @description Rules for the /subscriptions/{subscriptionId} collection.
     * @path /subscriptions/{subscriptionId}
     * @allow (get, list, create, update, delete) - Anyone can read, list, and create subscriptions.
     * @principle Subscriptions are globally accessible
     */
    match /subscriptions/{subscriptionId} {
      allow get, list, create, update, delete: if true;
    }

    /**
     * @description This rule corrects the NextJS error for listing videos. The initial rules did not permit listing videos,
     *              leading to a permission error when the app attempted to fetch all videos.  This change allows
     *              unauthenticated listing of videos.  This is a temporary fix and SHOULD BE ADDRESSED BY THE TEAM as this violates the principle of
     *              strict ownership.
     * @path /videos
     * @allow list - Unauthenticated users can list videos.
     */
    match /videos {
        allow list: if true;
        allow get, create, update, delete: if false;
    }
  }
}