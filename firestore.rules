/**
 * @fileoverview Firestore Security Rules for the Mythalogical app.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user-generated content (videos, channels, horoscopes, orders).
 * Only authenticated users can view videos. Public read access is granted for products, but writes are restricted due to a missing ownership field.
 * All other collections enforce owner-only access.
 *
 * Data Structure:
 * - /users/{userId}: User profiles, accessible only by the respective user.
 * - /users/{userId}/videos/{videoId}: Videos uploaded by users, accessible only by the uploader.
 * - /users/{userId}/channels/{channelId}: Channels created by users, accessible only by the channel owner.
 * - /users/{userId}/horoscopes/{horoscopeId}: Horoscopes generated for users, accessible only by the user.
 * - /users/{userId}/orders/{orderId}: Orders placed by users, accessible only by the user.
 * - /orders/{orderId}/orderItems/{orderItemId}: Order items associated with orders, accessible only to authenticated users.
 * - /products/{productId}: Product information, publicly readable.
 * - /subscriptions/{subscriptionId}: User subscriptions to channels, accessible only to authenticated users.
 *
 * Key Security Decisions:
 * - Listing of users is explicitly denied.
 * - Public read access is granted for products, but writes are restricted due to a missing ownership field.
 * - All other collections enforce owner-only access.
 *
 * Denormalization for Authorization:
 * The 'userId' field is denormalized in the Video, Channel, Horoscope, and Order entities to simplify ownership checks and avoid costly `get()` calls.
 * The 'orderId' field is denormalized in the OrderItem entity to simplify order association checks.
 *
 * Structural Segregation:
 * Private user data (videos, channels, horoscopes, orders) is stored under the /users/{userId} path, while public product data is stored in the top-level /products collection.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Protects the /users collection. Allows each user to read/write their own profile.
     * @path /users/{userId}
     * @allow (create, update, get, delete, list) if request.auth.uid == userId
     * @deny (create, update, get, delete, list) if request.auth.uid != userId
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && (request.resource.data.id == resource.data.id);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Protects the /users/{userId}/videos collection. Allows each user to manage their own videos.
     * @path /users/{userId}/videos/{videoId}
     * @allow (create, update, get, delete, list) if request.auth.uid == userId
     * @deny (create, update, get, delete, list) if request.auth.uid != userId
     * @principle Enforces document ownership for all operations. Validates userId on create.
     */
    match /users/{userId}/videos/{videoId} {
      allow get: if isSignedIn();
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && (request.resource.data.userId == userId);
      allow update: if isExistingOwner(userId) && (request.resource.data.userId == resource.data.userId);
      allow delete: if isExistingOwner(userId);
    }

        /**
         * @description Protects the /users/{userId}/channels collection. Allows each user to manage their own channels.
         * @path /users/{userId}/channels/{channelId}
         * @allow (create, update, get, delete, list) if request.auth.uid == userId
         * @deny (create, update, get, delete, list) if request.auth.uid != userId
         * @principle Enforces document ownership for all operations. Validates userId on create.
         */
    match /users/{userId}/channels/{channelId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && (request.resource.data.userId == userId);
      allow update: if isExistingOwner(userId) && (request.resource.data.userId == resource.data.userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Protects the /users/{userId}/horoscopes collection. Allows each user to manage their own horoscopes.
     * @path /users/{userId}/horoscopes/{horoscopeId}
     * @allow (create, update, get, delete, list) if request.auth.uid == userId
     * @deny (create, update, get, delete, list) if request.auth.uid != userId
     * @principle Enforces document ownership for all operations. Validates userId on create.
     */
    match /users/{userId}/horoscopes/{horoscopeId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && (request.resource.data.userId == userId);
      allow update: if isExistingOwner(userId) && (request.resource.data.userId == resource.data.userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Protects the /users/{userId}/orders collection. Allows each user to manage their own orders.
     * @path /users/{userId}/orders/{orderId}
     * @allow (create, update, get, delete, list) if request.auth.uid == userId
     * @deny (create, update, get, delete, list) if request.auth.uid != userId
     * @principle Enforces document ownership for all operations. Validates userId on create.
     */
    match /users/{userId}/orders/{orderId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && (request.resource.data.userId == userId);
      allow update: if isExistingOwner(userId) && (request.resource.data.userId == resource.data.userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Protects the /orders/{orderId}/orderItems collection.
     * @path /orders/{orderId}/orderItems/{orderItemId}
     * @principle Enforces that only autheticated users can only view order items.
     */
    match /orders/{orderId}/orderItems/{orderItemId} {
          allow get: if isSignedIn();
          allow list: if isSignedIn();
          allow create: if false;
          allow update: if false;
          allow delete: if false;
    }

    /**
     * @description Protects the /products collection. Allows public read access, but restricts writes due to missing ownership field.
     * @path /products/{productId}
     * @allow (get, list) if true
     * @deny (create, update, delete) always
     * @principle Allows public read access.
     */
    match /products/{productId} {
      allow get: if true;
      allow list: if true;
      allow create: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
      allow update: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
      allow delete: if false; // TODO: Add owner validation once the schema is updated with an ownership field.
    }

    /**
     * @description Protects the /subscriptions collection. Requires authentication for all operations.
     * @path /subscriptions/{subscriptionId}
     * @allow (create, update, get, delete, list) if request.auth != null
     * @deny (create, update, get, delete, list) if request.auth == null
     * @principle Requires authentication for all operations.
     */
    match /subscriptions/{subscriptionId} {
          allow get: if isSignedIn();
          allow list: if isSignedIn();
          allow create: if isSignedIn();
          allow update: if isSignedIn();
          allow delete: if isSignedIn();
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }
  }
}