
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
      
      match /horoscopes/{horoscopeId} {
        allow read, write: if isOwner(userId);
      }

      match /preferences/{prefId} {
        allow read, write: if isOwner(userId);
      }

      match /cart/{productId} {
        allow read, write, delete: if isOwner(userId);
      }

      match /orders/{orderId} {
        allow read, create: if isOwner(userId);
      }

      match /followers/{followerId} {
        allow read, delete: if isOwner(userId);
        allow create: if isSignedIn() && request.auth.uid == followerId;
      }
      
      match /following/{followedId} {
        allow read, delete: if isOwner(userId);
        allow create: if isOwner(userId);
      }
      
      match /contestProgress/{contestId} {
        allow create: if isOwner(userId) && request.resource.data.authorId == userId;
        allow read, update, delete: if isOwner(userId);
      }

      match /{subcollection}/{docId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /contests/{contestId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();

      // Allow users to add their chants
      match /chants/{chantId} {
        allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
        allow read: if true;
      }
    }

    match /{collectionName}/{docId} {
      allow read: if true;
      allow list: if true;

      // Allow write access only for super admins for top-level content
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isSuperAdmin == true;
    }
  }
}
