/**
 * @fileoverview Firestore Security Rules for Mythalogical App
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for most data, supplemented by public read access where appropriate.
 *
 * Data Structure:
 * - User-specific data (videos, channels, horoscopes, orders) is nested under `/users/{userId}`.
 * - Products are stored in a top-level `/products` collection, globally accessible.
 * - Subscriptions are stored in a top-level `/subscriptions` collection.
 *
 * Key Security Decisions:
 * - Users can only create, read, update, and delete their own data within their user subcollections.
 * - Public read access is granted to the `/products` collection.
 * - Data consistency is enforced by validating user IDs in paths against document fields on creation and updates.
 * - Listing of videos and horoscopes are restricted to the owner.
 *
 * Denormalization for Authorization:
 * - The `userId` is denormalized into video, channel, horoscope, and order documents to enable efficient ownership checks without additional reads.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner and the resource exists.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && exists(resource);
    }

    /**
     * @description Rules for user profiles.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Listing users is not permitted.
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Rules for videos uploaded by users.
     * @principle Enforces document ownership and validates the userId in the data.
     */
    match /users/{userId}/videos/{videoId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Rules for channels created by users.
     * @principle Enforces document ownership and validates the userId in the data.
     */
    match /users/{userId}/channels/{channelId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Rules for horoscopes generated for users.
     * @principle Enforces document ownership and validates the userId in the data.
     */
    match /users/{userId}/horoscopes/{horoscopeId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Rules for orders placed by users.
     * @principle Enforces document ownership and validates the userId in the data.
     */
    match /users/{userId}/orders/{orderId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Rules for order items associated with orders.
     */
    match /orders/{orderId}/orderItems/{orderItemId} {
      allow get: if true;
      allow list: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true;
    }

    /**
     * @description Rules for product information.
     * @principle Products are globally accessible.
     */
    match /products/{productId} {
      allow get: if true;
      allow list: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true;
    }

    /**
     * @description Rules for user subscriptions to channels.
     * @principle Subscriptions are globally accessible.
     */
    match /subscriptions/{subscriptionId} {
      allow get: if true;
      allow list: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true;
    }

    /**
     * @description Top level videos collection.
     */
    match /videos/{videoId} {
          allow get: if true;
          allow list: if false;
          allow create: if false;
          allow update: if false;
          allow delete: if false;
    }

  }
}