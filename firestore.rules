/**
 * @fileoverview Firestore Security Rules for Mythalogical App
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user-generated content (videos, channels, horoscopes, orders),
 * ensuring that only the authenticated user can create, read, update, or delete their own data. Products are publicly readable,
 * but write access is not granted in this prototype. Subscriptions are top-level documents that can be created by users.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles. Accessible only by the respective user.
 * - /users/{userId}/videos/{videoId}: Stores videos uploaded by users, accessible only by the video owner.
 * - /users/{userId}/channels/{channelId}: Stores channels created by users, accessible only by the channel owner.
 * - /users/{userId}/horoscopes/{horoscopeId}: Stores horoscopes generated for users, accessible only by the horoscope owner.
 * - /users/{userId}/orders/{orderId}: Stores orders placed by users, accessible only by the order owner.
 * - /orders/{orderId}/orderItems/{orderItemId}: Stores order items associated with orders, accessible only to the order owner (via parent order).
 * - /products/{productId}: Stores product information, publicly readable.
 * - /subscriptions/{subscriptionId}: Stores user subscriptions to channels.
 *
 * Key Security Decisions:
 * - Strict User Ownership: All content nested under /users/{userId} is strictly controlled by the authenticated user matching {userId}.
 * - No User Listing: Listing all users is disallowed for privacy.
 * - Products are Publicly Readable: The /products collection is intended to be a public catalog.
 * - Authorization Independence via Denormalization: Documents contain redundant user IDs to avoid costly `get()` calls in rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secures user profiles, ensuring only the authenticated user can access their own profile.
     * @path /users/{userId}
     * @allow (create) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can create their profile if request.auth.uid == userId.
     * @allow (get) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can get their profile if request.auth.uid == userId.
     * @allow (update) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can update their profile if request.auth.uid == userId.
     * @allow (delete) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can delete their profile if request.auth.uid == userId.
     * @deny (get) - User 'anotherUser' cannot get User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' profile.
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && exists(resource);
      }
      allow create: if isOwner(userId);
      allow get: if isOwner(userId);
      allow list: if false;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secures videos uploaded by users, ensuring only the video owner can manage their videos.
     * @path /users/{userId}/videos/{videoId}
     * @allow (create) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can create a video under their profile if request.auth.uid == userId.
     * @allow (get) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can get a video under their profile if request.auth.uid == userId.
     * @allow (update) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can update a video under their profile if request.auth.uid == userId.
     * @allow (delete) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can delete a video under their profile if request.auth.uid == userId.
     * @deny (get) - User 'anotherUser' cannot get Video 'someVideoId' under User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32'.
     * @principle Enforces document ownership for user-uploaded videos.
     */
    match /users/{userId}/videos/{videoId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
        function isExistingOwner(userId) {
        return isOwner(userId) && exists(resource);
      }
      allow create: if isOwner(userId);
      allow get: if isOwner(userId);
      allow list: if false;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secures channels created by users, ensuring only the channel owner can manage their channel.
     * @path /users/{userId}/channels/{channelId}
     * @allow (create) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can create a channel under their profile if request.auth.uid == userId.
     * @allow (get) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can get a channel under their profile if request.auth.uid == userId.
     * @allow (update) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can update a channel under their profile if request.auth.uid == userId.
     * @allow (delete) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can delete a channel under their profile if request.auth.uid == userId.
     * @deny (get) - User 'anotherUser' cannot get Channel 'someChannelId' under User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32'.
     * @principle Enforces document ownership for user-created channels.
     */
    match /users/{userId}/channels/{channelId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
        function isExistingOwner(userId) {
        return isOwner(userId) && exists(resource);
      }
      allow create: if isOwner(userId);
      allow get: if isOwner(userId);
      allow list: if false;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secures horoscopes generated for users, ensuring only the horoscope owner can manage their horoscopes.
     * @path /users/{userId}/horoscopes/{horoscopeId}
     * @allow (create) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can create a horoscope under their profile if request.auth.uid == userId.
     * @allow (get) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can get a horoscope under their profile if request.auth.uid == userId.
     * @allow (update) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can update a horoscope under their profile if request.auth.uid == userId.
     * @allow (delete) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can delete a horoscope under their profile if request.auth.uid == userId.
     * @deny (get) - User 'anotherUser' cannot get Horoscope 'someHoroscopeId' under User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32'.
     * @principle Enforces document ownership for user-generated horoscopes.
     */
    match /users/{userId}/horoscopes/{horoscopeId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && exists(resource);
      }
      allow create: if isOwner(userId);
      allow get: if isOwner(userId);
      allow list: if false;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secures orders placed by users, ensuring only the order owner can manage their orders.
     * @path /users/{userId}/orders/{orderId}
     * @allow (create) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can create an order under their profile if request.auth.uid == userId.
     * @allow (get) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can get an order under their profile if request.auth.uid == userId.
     * @allow (update) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can update an order under their profile if request.auth.uid == userId.
     * @allow (delete) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can delete an order under their profile if request.auth.uid == userId.
     * @deny (get) - User 'anotherUser' cannot get Order 'someOrderId' under User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32'.
     * @principle Enforces document ownership for user-placed orders.
     */
    match /users/{userId}/orders/{orderId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && exists(resource);
      }
      allow create: if isOwner(userId);
      allow get: if isOwner(userId);
      allow list: if false;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secures order items associated with orders, accessible only to the order owner (via parent order).
     * @path /orders/{orderId}/orderItems/{orderItemId}
     * @allow (create) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can create an order item under Order 'order123' if they own Order 'order123'.
     * @allow (get) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can get an order item under Order 'order123' if they own Order 'order123'.
     * @allow (update) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can update an order item under Order 'order123' if they own Order 'order123'.
     * @allow (delete) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can delete an order item under Order 'order123' if they own Order 'order123'.
     * @deny (get) - User 'anotherUser' cannot get OrderItem 'someOrderItemId' under Order 'order123'
     * @principle Enforces access control based on ownership of the parent order.
     */
    match /orders/{orderId}/orderItems/{orderItemId} {
        function isOrderOwner(orderId) {
            return get(/databases/$(database)/documents/users/$(request.auth.uid)/orders/$(orderId)).data.exists();
        }
        function isExistingOrderOwner(orderId) {
            return isOrderOwner(orderId) && exists(resource);
        }
      allow create: if isOrderOwner(orderId);
      allow get: if isOrderOwner(orderId);
      allow list: if false; // Listing not allowed for order items
      allow update: if isExistingOrderOwner(orderId);
      allow delete: if isExistingOrderOwner(orderId);
    }

    /**
     * @description Makes product information publicly accessible.
     * @path /products/{productId}
     * @allow (get) - Any user can retrieve product information.
     * @allow (list) - Any user can list products.
     * @deny (create) - No user can create product via client.
     * @deny (update) - No user can update product via client.
     * @deny (delete) - No user can delete product via client.
     * @principle Allows public read access to product information.
     */
    match /products/{productId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures user subscriptions to channels.
     * @path /subscriptions/{subscriptionId}
     * @allow (create) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can create a subscription.
     * @allow (get) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can get a subscription if they are the subscriber.
     * @allow (update) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can update a subscription if they are the subscriber.
     * @allow (delete) - User 'oOBonZ2xmAYaWaWk7c9cfyQVTx32' can delete a subscription if they are the subscriber.
     * @deny (get) - User 'anotherUser' cannot get Subscription 'someSubscriptionId'.
     * @principle Enforces document ownership for user subscriptions.
     */
    match /subscriptions/{subscriptionId} {
        function isSubscriber(userId) {
            return exists(/databases/$(database)/documents/users/$(request.auth.uid));
        }
        function isExistingSubscriber(subscriptionId) {
            return isSubscriber(request.auth.uid) && exists(resource);
        }

      allow create: if isSubscriber(request.auth.uid);
      allow get: if isSubscriber(request.auth.uid);
      allow list: if false;
      allow update: if isExistingSubscriber(subscriptionId);
      allow delete: if isExistingSubscriber(subscriptionId);
    }

    /**
     * @description  Publicly accessible videos
     * @path /videos
     * @allow (get) - Any user can retrieve video information.
     * @allow (list) - Any user can list videos.
     * @deny (create) - No user can create video via client.
     */
    match /videos {
        allow get: if true;
        allow list: if true;
        allow create: if false;
        allow update: if false;
        allow delete: if false;
    }
  }
}