
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ---------------------------------------------------------------------------------------------
    // ðŸ”¹ Helper Functions
    // ---------------------------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isSuperAdmin() {
      // This is a placeholder UID. In a real app, manage this securely.
      return request.auth.uid == "9RwsoEEkWPR3Wpv6wKZmhos1xTG2";
    }

    function isNotSelf(userId) {
      return request.auth.uid != userId;
    }

    // ---------------------------------------------------------------------------------------------
    // ðŸ”¹ Global Read-Only Rule for Public Content
    // ---------------------------------------------------------------------------------------------
    // All collections listed here are publicly readable by anyone.
    // Write access is handled on a case-by-case basis below.
    match /{collectionId}/{docId} 
      where collectionId in [
        'deities', 'stories', 'epicHeroes', 'temples', 'rituals', 
        'festivals', 'panchang', 'products', 'shops', 
        'contests', 'challenges', 'channels', 'groups', 'media', 'posts', 'manifestations'
      ] {
      allow get, list: if true;
    }

    // ---------------------------------------------------------------------------------------------
    // ðŸ”¹ User Profiles and User-Specific Subcollections
    // ---------------------------------------------------------------------------------------------
    match /users/{userId} {
      allow get: if true;
      allow create, update, delete: if isOwner(userId) || isSuperAdmin();

      // Default subcollections are readable/writable only by the owner or admin
      match /{subcollection}/{docId} 
        where subcollection in ['preferences', 'horoscopes', 'badges', 'bookmarks', 'cart', 'challenges', 'contestProgress', 'virtualOfferings'] {
        allow read, write: if isOwner(userId) || isSuperAdmin();
      }

      // Followers can be seen by anyone, but only created/deleted with specific logic
      match /followers/{followerId} {
        allow get, list: if true;
        allow create: if isSignedIn() && request.auth.uid == followerId && isNotSelf(userId);
        allow delete: if isSignedIn() && (request.auth.uid == followerId || isOwner(userId));
      }

      // Following can be seen by anyone, but only managed by the user themselves
      match /following/{followedId} {
        allow get, list: if true;
        allow create, delete: if isOwner(userId) && isNotSelf(followedId);
      }
       
      // Channel subscriptions are private to the user
      match /subscriptions/{channelId} {
        allow read, write: if isOwner(userId);
      }

      // Playlist references are private
       match /playlists/{playlistId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's group memberships
      match /groups/{groupId} {
          allow read, write: if isOwner(userId);
      }
    }
    
    // ---------------------------------------------------------------------------------------------
    // ðŸ”¹ Content Write Rules (Admin-Only)
    // ---------------------------------------------------------------------------------------------
    // Admin can manage all core content types
    match /{collectionId}/{docId}
       where collectionId in ['deities', 'stories', 'epicHeroes', 'temples', 'rituals', 'festivals', 'panchang', 'products', 'shops', 'challenges'] {
        allow write: if isSuperAdmin();
    }

    // Admins or channel owners can manage channels
    match /channels/{channelId} {
        allow write: if isOwner(channelId) || isSuperAdmin();
        
        // Subscribers subcollection is managed by the subscriber themselves
        match /subscribers/{subscriberId} {
             allow create, delete: if isOwner(subscriberId);
             allow get, list: if true;
        }
    }

    // ---------------------------------------------------------------------------------------------
    // ðŸ”¹ Community & User-Generated Content Write Rules
    // ---------------------------------------------------------------------------------------------
    
    // Any signed-in user can create content in these collections. Only owners/admins can edit/delete.
    match /{collectionId}/{docId}
      where collectionId in ['posts', 'manifestations', 'playlists', 'groups'] {
        allow create: if isSignedIn();
        allow update, delete: if isOwner(resource.data.userId) || isOwner(resource.data.creatorId) || isSuperAdmin();
    }
    
    // Explicit rules for Media, as it has special interactions
    match /media/{mediaId} {
        allow create: if isSignedIn();
        allow update, delete: if isOwner(resource.data.userId) || isSuperAdmin();

        match /comments/{commentId} {
            allow get, list: if true;
            allow create: if isSignedIn();
            allow update, delete: if isOwner(resource.data.authorId) || isSuperAdmin();
        }

        match /likes/{userId} {
            allow get, list: if true;
            allow create, delete: if isOwner(userId);
        }
    }

    // Rules for Comments and Likes on other collections
    match /{collectionId}/{docId} 
       where collectionId in ['posts', 'manifestations', 'temples'] {
      
      match /comments/{commentId} {
        allow get, list: if true;
        allow create: if isSignedIn();
        allow update, delete: if isOwner(resource.data.authorId) || isSuperAdmin();
      }

      match /likes/{userId} {
        allow get, list: if true;
        allow create, delete: if isOwner(userId);
      }
    }
    
    // ---------------------------------------------------------------------------------------------
    // ðŸ”¹ Special Cases
    // ---------------------------------------------------------------------------------------------

    // Rules for Contests
    match /contests/{contestId} {
        allow get, list: if true;
        allow create, delete: if isSuperAdmin();
        // Any signed-in user can increment the total chant count
        allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['totalChants', 'updatedAt']);

        // Any signed-in user can add a chant document to the subcollection
        match /chants/{chantId} {
            allow create: if isSignedIn();
            allow read: if true;
        }
    }

    // Rules for Orders
    match /orders/{orderId} {
      allow get, list: if isOwner(resource.data.userId) || isSuperAdmin();
      allow create: if isSignedIn();
      allow update, delete: if isSuperAdmin();
    }

    // Rule for group membership
    match /groups/{groupId}/members/{userId} {
        allow read, write: if isOwner(userId);
    }
  }
}
