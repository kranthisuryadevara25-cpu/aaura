
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ---------------------------------------------------------------------------------------------
    // ðŸ”¹ Helper Functions
    // ---------------------------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isSuperAdmin() {
      // In a real app, this should be a custom claim, not a hardcoded UID.
      return request.auth.uid == "9RwsoEEkWPR3Wpv6wKZmhos1xTG2";
    }

    function isCreator(docData) {
      // Handles documents with either creatorId, authorId, or userId
      return isOwner(docData.creatorId) || isOwner(docData.authorId) || isOwner(docData.userId);
    }
    

    // ---------------------------------------------------------------------------------------------
    // ðŸ”¹ Public Read-Only Content (Admin-Managed)
    // ---------------------------------------------------------------------------------------------
    match /{collectionId}/{docId} 
      where collectionId in [
        'deities', 'stories', 'epicHeroes', 'temples', 'rituals', 
        'festivals', 'panchang', 'products', 'shops', 
        'contests', 'challenges', 'plans'
      ] {
      allow get, list: if true;
      allow write: if isSuperAdmin();
    }
    
    // ---------------------------------------------------------------------------------------------
    // ðŸ”¹ User Profiles & Private Subcollections
    // ---------------------------------------------------------------------------------------------
    match /users/{userId} {
      allow get: if true;
      allow create, update, delete: if isOwner(userId) || isSuperAdmin();

      // Social Graph
      match /followers/{followerId} {
        allow get, list: if true;
        allow create: if isSignedIn() && request.auth.uid == followerId && request.auth.uid != userId;
        allow delete: if isSignedIn() && (request.auth.uid == followerId || isOwner(userId));
      }
      match /following/{followedId} {
        allow get, list: if true;
        allow create, delete: if isOwner(userId) && request.auth.uid != followedId;
      }
       
      // Private User Data
      match /subscriptions/{channelId} { allow read, write: if isOwner(userId); }
      match /cart/{productId} { allow read, write: if isOwner(userId); }
      match /bookmarks/{bookmarkId} { allow read, write: if isOwner(userId); }
      match /preferences/{docId} { allow read, write: if isOwner(userId); }
      match /horoscopes/{docId} { allow read, write: if isOwner(userId); }
      match /badges/{docId} { allow read, write: if isOwner(userId); }
      match /challenges/{docId} { allow read, write: if isOwner(userId); }
      match /contestProgress/{docId} { allow read, write: if isOwner(userId); }
      match /virtualOfferings/{docId} { allow read, write: if isOwner(userId); }
      match /playlists/{docId} { allow read, write: if isOwner(userId); }
      
      // Explicit rule for joining/leaving groups
      match /groups/{groupId} {
          allow read, write: if isOwner(userId);
      }
    }
    
    // ---------------------------------------------------------------------------------------------
    // ðŸ”¹ User-Generated Content (Publicly Readable)
    // ---------------------------------------------------------------------------------------------
    match /{collectionId}/{docId}
      where collectionId in [
        'media', 'posts', 'manifestations', 'playlists', 'groups', 
        'temple_renovation_requests', 'temple_maintenance_funds'
      ] {
        allow get, list: if true;
        allow create: if isSignedIn();
        allow update, delete: if isCreator(resource.data) || isSuperAdmin();
    }

    // ---------------------------------------------------------------------------------------------
    // ðŸ”¹ Comments and Likes Subcollections
    // ---------------------------------------------------------------------------------------------
     match /{collectionId}/{docId} 
       where collectionId in ['media', 'posts', 'manifestations', 'temples', 'stories', 'deities', 'epicHeroes'] {
      
      // Anyone can read comments
      match /comments/{commentId} {
        allow get, list: if true;
        allow create: if isSignedIn();
        allow update, delete: if isCreator(resource.data) || isSuperAdmin();
      }

      // Anyone can read likes, but only the user can create/delete their own like
      match /likes/{userId} {
        allow get, list: if true;
        allow create, delete: if isOwner(userId);
      }
    }
    
    // ---------------------------------------------------------------------------------------------
    // ðŸ”¹ Special Collection Rules
    // ---------------------------------------------------------------------------------------------
    
    match /channels/{channelId} {
        allow get, list: if true;
        allow write: if isOwner(channelId) || isSuperAdmin();
        
        match /subscribers/{subscriberId} {
             allow create, delete: if isOwner(subscriberId);
             allow get, list: if true;
        }
    }
    
    match /groups/{groupId}/members/{userId} {
        allow read, write: if isOwner(userId);
    }

    match /contests/{contestId} {
        allow get, list: if true;
        allow create, delete: if isSuperAdmin();
        allow update: if isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['totalChants', 'updatedAt']);

        match /chants/{chantId} {
            allow create: if isSignedIn();
            allow read: if true;
        }
    }

     match /temple_maintenance_funds/{fundId}/donations/{donationId} {
        allow create: if isSignedIn();
        allow read: if isCreator(get(/databases/$(database)/documents/temple_maintenance_funds/$(fundId)).data) || isSuperAdmin();
     }
    
     match /orders/{orderId} {
      allow get: if isOwner(resource.data.userId) || isSuperAdmin();
      allow list: if isSuperAdmin();
      allow create: if isSignedIn();
      allow update: if isSuperAdmin();
    }

     match /transactions/{transactionId} {
        allow get: if isOwner(resource.data.userId) || isSuperAdmin();
        allow list: if isSuperAdmin();
        allow create: if isSignedIn();
        allow update: if isSuperAdmin();
    }
  }
}
