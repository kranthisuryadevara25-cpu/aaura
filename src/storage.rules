
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Rule for media uploads (videos, audio, etc.)
    // Allows a user to write to a path corresponding to their user ID.
    match /media/{userId}/{mediaId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rule for temple renovation request uploads
    match /renovation_requests/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Secure rule for user profile images.
    match /users/{userId}/profileImage/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Secure rule for general content images (deities, stories, etc.)
    // This allows any authenticated user (including admins using the forms) to upload.
    match /content-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Secure rule for product images in the marketplace.
    match /product-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default rule: Deny all other read/write operations to prevent unauthorized access.
    // This is a security best practice.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
