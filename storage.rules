
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check auth
    function isAuthenticated() {
      return request.auth != null;
    }

    // User profile images: Only the owner can upload/update. Publicly readable.
    match /users/{userId}/profileImage/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Media uploads (videos, audio, etc.):
    // Allow authenticated users to write to any path inside their own media folder.
    match /media/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // General content images (for deities, stories, etc.)
    // Writable by any authenticated user. Publicly readable.
    match /content-images/{allPaths=**} {
        allow read: if true;
        allow write: if isAuthenticated();
    }
    
    match /product-images/{allPaths=**} {
        allow read: if true;
        allow write: if isAuthenticated();
    }


    // Shop item images:
    // Writable by the merchant user. Publicly readable.
    match /shopItems/{sellerId}/{itemId}/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && request.auth.uid == sellerId;
    }
    
    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
